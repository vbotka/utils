version=1.0.0

delta=100

window_id=`xdotool getactivewindow`
#echo $window_id
echo $window_id > ~/.DISPLAY_WINDOW_CURRENT_ID
x_position=`xwininfo -id $window_id | grep 'Absolute upper-left X' | cut -d ':' -f 2 | sed 's/ //g'`
y_position=`xwininfo -id $window_id | grep 'Absolute upper-left Y' | cut -d ':' -f 2 | sed 's/ //g'`
# echo $x_position $y_position
echo $x_position $y_position > ~/.DISPLAY_WINDOW_CURRENT_POSITION

x_mouse=$delta
y_mouse=$delta
# echo $x_mouse $y_mouse

xdotool windowmove --sync $window_id 0 0
xdotool windowfocus --sync $window_id
sleep 1
xdotool key --delay 200 alt+F6 alt+F5
xdotool mousemove --sync $x_mouse $y_mouse


# EOF
